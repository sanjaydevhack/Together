<!-- This XML is for People List Fragment-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="5dp">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/peoplePic"
        android:padding=".5dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        app:border_color="#EEEEEE"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/peopleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/peoplePic"
        android:layout_toEndOf="@+id/peoplePic"
        android:layout_toRightOf="@+id/peoplePic"
        android:fontFamily="sans-serif-light"
        android:paddingTop="5dp"
        android:text="Full Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/peoplePic"
        android:layout_toEndOf="@+id/peoplePic"
        android:layout_toRightOf="@+id/peoplePic"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="15dp"
        android:text="Message goes here...."
        android:textAppearance="?android:attr/textAppearanceSmall" />


</RelativeLayout>